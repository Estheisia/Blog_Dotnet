@model IEnumerable<Blog_Barneaud_Huyghe.Models.Commentaire>

<div>
    <h1>Liste des commentaires :</h1>
   
</div>
<div>
    @if (Model.Count() > 0)
    {
        <table class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Message)</th>
                <th>@Html.DisplayNameFor(model => model.Autorisation)</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Message</td>
                    <td>@item.Autorisation</td>
                    <td>
                        <a asp-route-Id="@item.Id" asp-action="DeleteComment">Supprimer</a>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>Il n'y a pas de commentaires.</p>
    }
</div>
