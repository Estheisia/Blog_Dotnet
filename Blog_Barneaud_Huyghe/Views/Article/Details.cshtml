@model Blog_Barneaud_Huyghe.Models.Article

@{
    ViewData["Title"] = "Détails";
}

<h1>Détails</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Auteur
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticleIndividuId.Identifiant)
        </dd>
        <dd class="col-sm-12">
            <h1>@Html.DisplayFor(model => model.Titre)</h1>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Contenu)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contenu)
        </dd>
        <dd class="col-sm-12">
            Posté le : @Html.DisplayFor(model => model.Publication)
        </dd>
        <dt class="col-sm-12">
            Commentaires
        </dt>
        @foreach (Commentaire commentaire in ViewData["Commentaire"] as IEnumerable<Commentaire>)
        {
            @if (commentaire.ArticleId == Model.Id)
            {
                foreach (Individu ind in ViewData["Individu"] as IEnumerable<Individu>)
                {
                    @if (ind.IndividuId == commentaire.IndividuId)
                    {
                        <dd class="col-sm-12">
                            @ind.Identifiant a posté "@commentaire.Message".Ajouté le @commentaire.Publication
                        </dd>
                    }
                }
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Retour aux articles</a>
</div>
